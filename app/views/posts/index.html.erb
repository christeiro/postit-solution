<h3>All Posts</h3>

<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<ul>
<% @posts.each do |post| %>
  <li><%= post.title %> (<%= link_to "Edit", edit_post_path(post) %>)</li>
<% end %>
</ul>


<%= link_to 'Add New Post', new_post_path, class: 'btn btn-primary' %>
