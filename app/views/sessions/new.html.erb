<%= render 'shared/content_title', title: 'Please login' %>

<div class="well span4">
	<%= form_tag login_path do %>
		<div class="control-group">
			<%= label_tag(:username) %>
			<%= text_field_tag(:username) %>
		</div>
		<div class="control-group">
			<%= label_tag(:password) %>
			<%= password_field_tag(:password) %>
		</div>
		<br/>
		<%= submit_tag 'Login', class: 'btn btn-success' %>
	<% end %>
</div>